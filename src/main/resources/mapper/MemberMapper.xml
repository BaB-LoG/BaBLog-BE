<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.bablog.member.repository.mapper.MemberMapper">

    <resultMap id="MemberResultMap" type="com.ssafy.bablog.member.domain.Member">
        <id property="id" column="id"/>
        <result property="email" column="email"/>
        <result property="password" column="password"/>
        <result property="name" column="name"/>
        <result property="gender" column="gender"/>
        <result property="birthDate" column="birth_date"/>
        <result property="heightCm" column="height_cm"/>
        <result property="weightKg" column="weight_kg"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findByEmail" parameterType="string" resultMap="MemberResultMap">
        SELECT id, email, password, name, gender, birth_date, height_cm, weight_kg,
               created_at, updated_at
        FROM member
        WHERE email = #{email}
    </select>

    <select id="findById" parameterType="long" resultMap="MemberResultMap">
        SELECT id, email, password, name, gender, birth_date, height_cm, weight_kg,
               created_at, updated_at
        FROM member
        WHERE id = #{id}
    </select>

    <select id="countByEmail" parameterType="string" resultType="int">
        SELECT COUNT(1) FROM member WHERE email = #{email}
    </select>

    <insert id="insert" parameterType="com.ssafy.bablog.member.domain.Member" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO member (email, password, name, gender, birth_date, height_cm, weight_kg)
        VALUES (#{email}, #{password}, #{name}, #{gender}, #{birthDate}, #{heightCm}, #{weightKg})
    </insert>

    <update id="update" parameterType="com.ssafy.bablog.member.domain.Member">
        UPDATE member
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="gender != null">gender = #{gender},</if>
            <if test="birthDate != null">birth_date = #{birthDate},</if>
            <if test="heightCm != null">height_cm = #{heightCm},</if>
            <if test="weightKg != null">weight_kg = #{weightKg},</if>
            updated_at = NOW()
        </set>
        WHERE id = #{id}
    </update>

</mapper>
